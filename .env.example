# Enphase Exporter Configuration
# Copy this file to .env and fill in your values

# Required: Gateway address (include https://)
# Use mDNS hostname (recommended) or IP address
ENVOY_ADDRESS=https://envoy.local

# Required: Gateway serial number (found on your gateway or in Enlighten app)
ENVOY_SERIAL=

# Authentication: Use EITHER username/password OR jwt
# Option 1: Enlighten credentials
ENVOY_USERNAME=
ENVOY_PASSWORD=

# Option 2: Pre-generated JWT token (alternative to username/password)
# ENVOY_JWT=

# Optional: Logging configuration
LOG_LEVEL=info
LOG_FORMAT=text
