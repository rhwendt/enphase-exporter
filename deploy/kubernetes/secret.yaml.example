# Example secret - DO NOT commit with real values!
# Copy to secret.yaml and fill in your credentials
#
# Create with: kubectl apply -f secret.yaml
# Or use: kubectl create secret generic enphase-exporter \
#   --from-literal=serial=YOUR_SERIAL \
#   --from-literal=username=YOUR_EMAIL \
#   --from-literal=password=YOUR_PASSWORD
#
apiVersion: v1
kind: Secret
metadata:
  name: enphase-exporter
  labels:
    app.kubernetes.io/name: enphase-exporter
type: Opaque
stringData:
  serial: "YOUR_GATEWAY_SERIAL"
  username: "your-email@example.com"
  password: "your-enlighten-password"
  # Or use JWT instead of username/password:
  # jwt: "YOUR_JWT_TOKEN"
